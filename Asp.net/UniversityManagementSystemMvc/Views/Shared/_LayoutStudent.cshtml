<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/UniversityManagementSystemMvc.styles.css" asp-append-version="true" />
</head>
<body>
    
    <div class="d-flex">
        <div class="bg-dark text-white vh-100 p-3" style="width: 250px;">
            <h3 class="text-center">Admin Menu</h3>
            <ul class="nav flex-column">
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="Index">Main Page</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="Lesson">Lesson</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="UserProcessing">User Processing</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="Announcement">Announcement</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="Message">Message</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Index">Exit</a>
                </li>
            </ul>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
