<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <!-- Left Sidebar -->
        <div class="bg-dark text-white vh-100 p-3" style="width: 250px;">
            <h3 class="text-center">Menu</h3>
            <ul class="nav flex-column">
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Index">Anasayfa</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Admin">Admin</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Academician">Academician</a>
                </li>
                <li class="nav-item my-2">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Student">Student</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <header class="mb-4">
                <h1>@ViewData["Title"]</h1>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>